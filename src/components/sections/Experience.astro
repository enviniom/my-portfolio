---
import type { Work } from "@/cv";
import Section from "../Section.astro";

const work = Astro.props.work as Work;
---

<Section title={work.title}>
  <ul>
    {
      work.items.map(
        ({ name, position, startDate, endDate, summary }) => {
          const start = startDate.substring(0, 7);
          const end = endDate != null ? endDate.substring(0, 7) : "Actual";
          const resume = summary.split("|");
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{name}</h3>
                    <h4>{position}</h4>
                  </div>
                  <time>
                    {start} - {end}
                  </time>
                </header>
                <footer>
                  <p>{resume[0]}</p>
                  <p>{resume[1]}</p>
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>
<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  article h3 {
    color: #111;
    font-weight: 500;
  }
  article h4 {
    color: #222;
    font-weight: 400;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }
  time {
    color: #555;
    font-size: 0.9rem;
    min-width: 102px;
  }

  @media (width <= 768px) {
    time {
      text-align: right;
    }
  }
</style>
