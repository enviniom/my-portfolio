---
import Section from "../Section.astro";

import { projects } from "@cv";
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(({ name, url, description, highlights }) => {
        return (
          <li>
            <article>
              <header>
                <a href={url} target="_blank" rel="noopener noreferrer">
                  <h3>{name}</h3>
                </a>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlight) => (
                  <span>{highlight}</span>
                ))}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-inline: -13px;
  }
  article {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    padding: 0.8rem;
    height: 100%;
  }
  header {
    flex: 1;
  }

  h3 {
    margin-bottom: 4px;
  }

  article a {
    color: #111;
  }
  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.9rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.75rem;
  }

  footer span {
    border-radius: 6px;
    background-color: #eee;
    color: #444;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }

    article {
      border: none;
      box-shadow: 0 1px 1px #f2f2f2;
      padding: 0 0 16px 0;
    }
  }
</style>
