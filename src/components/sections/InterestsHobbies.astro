---
import type { Interests } from "@/cv";
import Section from "../Section.astro";

const interests = Astro.props.interests as Interests;
---

<Section title={interests.title}>
  <ul>
    {
      interests.items.map(({ name }) => (
       <li>
        <span>{name}</span>
        </li>   
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  li {
    border-radius: 6px;
    background-color: #eee;
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
